@model DesignPattern.Meditor.MediatorPattern.Results.GetProductUpdateQueryResult
@{
    Layout = null;
}
<link href="~/lib\bootstrap\dist\css\bootstrap.css" rel="stylesheet" />
<div class="container">
    <form method="post">
        <label>Ürün ID</label>
        <input type="text" class="form-control" asp-for="ProductID" />
        <br />
        <label>Ürün Adı</label>
        <input type="text" class="form-control" asp-for="ProductName" />
        <br />
        <label>Ürün Stok Sayısı </label>
        <input type="text" class="form-control" asp-for="ProductStock" />
        <br />
        <label>Ürün Fiyatı</label>
        <input type="text" class="form-control" asp-for="ProductPrice" />
        <br />
        <label>Ürün Açıklaması </label>
        <input type="text" class="form-control" asp-for="ProductCategory" />
        <br />
        <button class="btn btn-success"> Ürünü Güncelle</button>
    </form>
</div>
