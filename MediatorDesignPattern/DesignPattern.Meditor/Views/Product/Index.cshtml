@using DesignPattern.Meditor.MediatorPattern.Results
@model List<GetAllProductQueryResult>
@{
    Layout = null;
}
<link href="~/lib\bootstrap\dist\css\bootstrap.css" rel="stylesheet" />

<div class="container">

    <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Ürün Adı</th>
            <th>Fiyatı</th>
            <th>Stok Sayısı</th>
            <th>Stok Türü</th>
            <th>Kategorisi</th>
            <th>Sİl</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductID</td>
                <td>@item.ProductName</td>
                <td>@item.ProductPrice $</td>
                <td>@item.ProductStock</td>
                <td>@item.ProductStockType</td>
                <td>@item.ProductCategory</td>
                @*
                <td><a href="#" class="btn btn-dark"> Getir</a></td>*@
                <td><a href="#" class="btn btn-danger"> SİL</a></td>
                <td><a href="#" class="btn btn-warning"> Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="#" class="btn btn-primary"> Yeni ürün Girişi</a>
</div>